<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <% if params[:plan] == '2'%>
        <h1>Sing Up with Pro</h1>
        <p>Sing Up for 10$/month and get access to the community and contact information</p>
      <% else %>
        <h1>Sign Up with Basic</h1>
        <p>Sign Up for free and get basic access to the community</p>
      <% end %>
    </div>
    <div class="well">
      <h2>Sign up</h2>
        <% if params[:plan] == '2'%>
          <%= render "pro_plan" %>
        <% else %>
          <%= render "basic_plan" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
