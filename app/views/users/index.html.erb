<% @users.each do |user| %>
<div class="row">
  <div class="media col-md-8 col-md-offset-2">
    <div class="well <%= cycle('white-bg', '') %>">
      <div class="row">
        <div class="media-left col-sm-3 text-center">
          <%= link_to user do %>
          <%= image_tag user.profile.avatar.url(:thumb) %>
          <% end %>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to user do %>
            <%= user.profile.first_name %> <%= user.profile.last_name %>
            <% end %>
          </h4>
          <p> 
            <%= user.profile.job_title %> 
            <% if user.plan_id == 2 %>
              <span class="label label-danger">PRO</span> 
            <% end %>
          </p>
        </div> 
      </div>
    </div>   
  </div> 
</div>
<% end %>
