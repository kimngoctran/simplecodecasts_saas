<div class="jumbotron text-center">
  <h1>Welcome to Dev Match</h1>
  <h3>Dev Match is a place where entepreneur can meet developper</h3> 
</div>

<div class="row">
  <div class="col-md-6">
    <div class="well">
      <% if user_signed_in? %>
        <h2 class="text-center">Your profile</h2>
      <% if current_user.profile %>
      <%= link_to "Edit profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <p>Create your profile so that you can share your information to the community</p>
          <%= link_to "Create your profile!", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
        <% end %>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="well">
      <h2 class="text-center">The Community</h2>
      <p>Visit the community to meet other developers, entrepreneurs, and investors!</p>
      <%= link_to "Visite the community", "#" , class: 'btn btn-default btn-lg btn-block'%>
    </div>
  </div> 
  
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class='text-center'>Basic Account</h2>
        <h4>Sing Up for free and get basic access to the community</h4>
        <br/>
        <%= link_to "Sing Up with Basic",new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block', method: :get  %> 
      </div>
    </div>
 
    <div class="col-md-6">
      <div class="well">
        <h2 class='text-center'>Pro Account</h2>
        <h4>Sing Up for 10$/month and get access to the community and contact information</h4>
        <%= link_to "Sing Up with Pro",new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block', method: :get  %> 
      </div>
    </div> 
  <% end %>
</div>